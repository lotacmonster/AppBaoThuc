<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dinh.clock.MainActivity"
    android:background="@drawable/background5"
    android:weightSum="5"
    android:orientation="vertical"
    android:padding="@dimen/padding_value_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/clock"
            android:id="@+id/btnClock"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/alarm"
            android:id="@+id/btnAlarm"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/timer"
            android:id="@+id/btnTimer"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="5"
        android:padding="@dimen/padding_value_main">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/num_3"
            android:id="@+id/imgHH"
            android:layout_weight="1"
            android:padding="@dimen/padding_value_number"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/num_3"
            android:id="@+id/imgH"
            android:layout_weight="1"
            android:padding="@dimen/padding_value_number"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/doubledots"
            android:layout_weight="0.1"
            android:padding="@dimen/padding_value_number"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/num_3"
            android:id="@+id/imgMM"
            android:layout_weight="1"
            android:padding="@dimen/padding_value_number"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/num_3"
            android:id="@+id/imgM"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="dsadad"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textDateSize"
        android:textAlignment="viewEnd"
        android:id="@+id/textDate" />

</LinearLayout>
